{
	"name": "xm-vscode-git-cruise",
	"displayName": "Xiaomo Git History",
	"description": "Git history panel in your VS Code",
	"keywords": [
		"git",
		"log",
		"diff",
		"history",
		"graph",
		"branch",
		"commit",
		"scm",
		"flow",
		"tag"
	],
	"version": "0.2.5",
	"license": "MIT",
	"icon": "assets/logo/1x.png",
	"repository": "https://github.com/zhangmo8/vscode-git-history",
	"publisher": "zhangmo8",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other",
		"SCM Providers"
	],
	"activationEvents": [
		"onView:git-history.history"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"panel": [
				{
					"id": "gitHistoryView",
					"title": "Git",
					"icon": "$(history)"
				}
			]
		},
		"views": {
			"gitHistoryView": [
				{
					"type": "webview",
					"id": "git-history.history",
					"name": "History",
					"icon": "$(history)",
					"contextualTitle": "Git",
					"visibility": "visible"
				},
				{
					"id": "git-history.changes",
					"name": "Changes",
					"icon": "$(list-unordered)",
					"contextualTitle": "Git"
				}
			]
		},
		"commands": [
			{
				"category": "Git History",
				"command": "git-history.history",
				"title": "History",
				"icon": "$(history)"
			},
			{
				"category": "Git History",
				"command": "git-history.history.filter",
				"title": "Git History",
				"icon": "$(filter)"
			},
			{
				"category": "Git History",
				"command": "git-history.history.clear",
				"title": "Clear Selection",
				"icon": "$(clear-all)"
			},
			{
				"category": "Git History",
				"command": "git-history.history.reset",
				"title": "Reset History",
				"icon": "$(discard)"
			},
			{
				"category": "Git History",
				"command": "git-history.history.refresh",
				"title": "Refresh History",
				"icon": "$(refresh)"
			},
			{
				"category": "Git History",
				"command": "git-history.history.switch.repo",
				"title": "Switch Repository",
				"icon": "$(repo)"
			},
			{
				"category": "Git History",
				"command": "git-history.history.switch.branch",
				"title": "Select Reference",
				"icon": "$(git-branch)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "git-history.history.refresh",
					"when": "view =~ /git-history.history/",
					"group": "navigation@4"
				},
				{
					"command": "git-history.history.reset",
					"when": "view =~ /git-history.history/",
					"group": "navigation@4"
				},
				{
					"command": "git-history.history.clear",
					"when": "view =~ /git-history.history/",
					"group": "navigation@4"
				},
				{
					"command": "git-history.history.switch.repo",
					"when": "view =~ /git-history.history/",
					"group": "navigation@4"
				},
				{
					"command": "git-history.history.switch.branch",
					"when": "view =~ /git-history.history/",
					"group": "navigation@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts,tsx,js",
		"lint-fix": "eslint src --ext ts,tsx,js --fix",
		"test": "node ./dist/test/runTest.js",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/lodash": "^4.14.176",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.11.6",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"@types/vscode": "^1.56.0",
		"@types/which": "^2.0.1",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"copy-webpack-plugin": "^11.0.0",
		"css-loader": "^6.5.1",
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-mocha": "^10.1.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"glob": "^7.2.0",
		"husky": "^7.0.4",
		"mocha": "^9.1.3",
		"prettier": "^2.4.1",
		"sass-loader": "^12.3.0",
		"style-loader": "^3.3.1",
		"stylelint": "^14.0.1",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard-scss": "^2.0.1",
		"stylelint-prettier": "^2.0.0",
		"threads-plugin": "^1.4.0",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.4",
		"typescript-plugin-css-modules": "^3.4.0",
		"vscode-test": "^1.6.1",
		"webpack": "^5.62.1",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"@babel/types": "^7.23.4",
		"@use-gesture/react": "^10.1.3",
		"@vscode/codicons": "^0.0.30",
		"@vscode/webview-ui-toolkit": "^1.0.0",
		"classnames": "^2.3.1",
		"dayjs": "^1.10.7",
		"iconv-lite-umd": "^0.6.8",
		"inversify": "^6.0.1",
		"lodash": "^4.17.21",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-use": "^17.4.0",
		"react-virtual": "^2.8.2",
		"reflect-metadata": "^0.1.13",
		"simple-git": "^2.47.0",
		"threads": "^1.7.0",
		"vscode-nls": "^5.0.0",
		"which": "^2.0.2"
	},
	"prettier": {
		"trailingComma": "es5",
		"useTabs": true,
		"tabWidth": 4
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"browser": true,
			"amd": true,
			"node": true,
			"mocha": true
		},
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"import",
			"react-hooks",
			"mocha"
		],
		"rules": {
			"@typescript-eslint/naming-convention": [
				"warn",
				{
					"selector": [
						"enum"
					],
					"format": [
						"PascalCase"
					],
					"leadingUnderscore": "allow"
				}
			],
			"@typescript-eslint/semi": "warn",
			"curly": "warn",
			"eqeqeq": "warn",
			"no-throw-literal": "warn",
			"no-control-regex": "off",
			"no-constant-condition": "off",
			"no-case-declarations": "off",
			"semi": "off",
			"import/order": [
				"error",
				{
					"groups": [
						"builtin",
						"external",
						"internal",
						"parent",
						"sibling",
						"index"
					],
					"newlines-between": "always-and-inside-groups"
				}
			],
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn"
		},
		"ignorePatterns": [
			"out",
			"dist",
			"**/*.d.ts"
		],
		"extends": [
			"eslint:recommended",
			"prettier"
		]
	},
	"stylelint": {
		"plugins": [
			"stylelint-prettier"
		],
		"rules": {
			"prettier/prettier": true,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global",
						"export"
					]
				}
			],
			"property-no-unknown": [
				true,
				{
					"ignoreProperties": [
						"SELECT_HOST"
					]
				}
			],
			"custom-property-pattern": [
				"^([A-Za-z0-9]*)(-[A-Za-z0-9]+)*$"
			]
		},
		"extends": [
			"stylelint-config-standard-scss",
			"stylelint-config-prettier"
		]
	}
}
